<resources>
  <!-- Base application theme. -->
  <style name="SWTrace" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>

    <item name="fontFamily">@font/montserrat_medium</item>
    <item name="android:fontFamily">@font/montserrat_medium</item>

    <item name="background">@color/gray100</item>
    <item name="android:scrollbarThumbVertical">@null</item>
    <item name="android:scrollbarThumbHorizontal">@null</item>
  </style>

  <style name="SWTrace.TitleStyle" parent="android:TextAppearance">
    <item name="android:textSize">25sp</item>
    <item name="android:textColor">@color/gray700</item>
    <item name="fontFamily">@font/montserrat_bold</item>
    <item name="android:fontFamily">@font/montserrat_bold</item>
  </style>

  <style name="SWTrace.SubtitleStyle" parent="android:TextAppearance">
    <item name="android:textSize">15sp</item>
    <item name="android:textColor">@color/gray500</item>
    <item name="fontFamily">@font/montserrat_medium</item>
    <item name="android:fontFamily">@font/montserrat_medium</item>
  </style>

  <style name="SWTrace.FooterStyle" parent="android:TextAppearance">
    <item name="android:textSize">15sp</item>
    <item name="android:textColor">@color/black</item>
    <item name="fontFamily">@font/montserrat_light</item>
    <item name="android:fontFamily">@font/montserrat_light</item>
  </style>

  <style name="SWTrace.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <item name="errorEnabled">true</item>
    <item name="endIconMode">clear_text</item>
    <item name="errorTextColor">@color/red</item>
    <item name="hintTextColor">@color/indigo</item>
    <item name="boxStrokeColor">@color/indigo</item>
    <item name="colorControlActivated">@color/blue</item>
  </style>

  <style name="SWTrace.TextInputLayout.OutlinedBox.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
    <item name="errorEnabled">true</item>
    <item name="errorTextColor">@color/red</item>
    <item name="hintTextColor">@color/indigo</item>
    <item name="boxStrokeColor">@color/indigo</item>
    <item name="colorControlActivated">@color/blue</item>
  </style>

  <style name="SWTrace.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="strokeColor">@color/indigo</item>
    <item name="android:textColor">@color/indigo</item>
  </style>

  <style name="AuthTheme" parent="FirebaseUI">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
  </style>
</resources>