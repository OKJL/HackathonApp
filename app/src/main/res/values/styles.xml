<resources>
  <!-- Base application theme. -->
  <style name="SWTrace" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>

    <item name="fontFamily">@font/montserrat_medium</item>
    <item name="android:fontFamily">@font/montserrat_medium</item>
  </style>

  <style name="SWTrace.TitleStyle" parent="android:TextAppearance">
    <item name="android:textSize">40sp</item>
    <item name="android:textColor">@color/gray700</item>
    <item name="fontFamily">@font/montserrat_bold</item>
    <item name="android:fontFamily">@font/montserrat_bold</item>
  </style>

  <style name="SWTrace.SubtitleStyle" parent="android:TextAppearance">
    <item name="android:textSize">15sp</item>
    <item name="android:textColor">@color/gray500</item>
    <item name="fontFamily">@font/montserrat_medium</item>
    <item name="android:fontFamily">@font/montserrat_medium</item>
  </style>

  <style name="SWTrace.FooterStyle" parent="android:TextAppearance">
    <item name="android:textSize">15sp</item>
    <item name="android:textColor">@color/black</item>
    <item name="fontFamily">@font/montserrat_light</item>
    <item name="android:fontFamily">@font/montserrat_light</item>
  </style>

  <style name="AuthTheme" parent="FirebaseUI">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
  </style>
</resources>